<main id="wrapper" class="main-login">
  <container id="login-container" class="container p-0 col-lg-4 col-md-7 col-sm-9 main-card">
    <div class="login-card">
      <h1 class="text-center font-weight-bold p-3 pt-5">
        LOGIN
      </h1>
      <form class="login-form p-3 d-flex justify-content-center">
        <ul class="list-group">
          <input type="text" name="email" id="email-login" placeholder="Email" class="login-inputs">
      
          <input type="password" name="password" id="password-login" placeholder="Password" class="mt-3 login-inputs">
  
          <h5 id="error-message-login" class="mt-3 error-color hidden">Incorrect email or password, please try again</h5>
          
          <button type="submit" class="mt-3">Login</button>

          
          <h4 class="mt-3 mb-5">
            No account? <button type="button" class="link" id="register-btn">Register Here!</button>
          </h4>
        </ul>
      </form>
    </div>
  </container>
</main>

<script src="./js/login.js"></script>