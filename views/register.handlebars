<container class="container p-0 col-4 main-card mt-5">
  <div class="login-card">
    <h1 class="text-center font-weight-bold p-3">
      REGISTER
    </h1>
    <form class="login-form p-3">
      <ul class="list-group">
        <input type="text" name="username" id="username-register" placeholder="Username" class="login-inputs">

        <input type="text" name="email" id="email-register" placeholder="Email" class="mt-3 login-inputs">
    
        <input type="password" name="password" id="password-register" placeholder="Password" class="mt-3 login-inputs">

        <h5 id="error-message-register" class="mt-3 error-color hidden"></h5>

        <button type="submit" class="mt-3">Register</button>
      </ul>
    </form>
  </div>
    <h3 class="mt-3">
      Have an account? <button type="button" class="link font-weight-bold" id="login-btn">Login Here!</button>
    </h3>
  </container>

  <script src="./js/register.js"></script>