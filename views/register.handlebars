  <main id="wrapper" class="main-login">
  <container id="login-container" class="container p-0 col-lg-4 col-md-7 col-sm-9 main-card">
    <div class="login-card">
      <h1 class="text-center font-weight-bold p-3 pt-5">
        LOGIN
      </h1>
      <form class="login-form p-3 d-flex justify-content-center">
        <ul class="list-group">
          <input type="text" name="username" id="username-register" placeholder="Username" class="login-inputs">

          <input type="text" name="email" id="email-register" placeholder="Email" class="mt-3 login-inputs">
    
          <input type="password" name="password" id="password-register" placeholder="Password" class="mt-3 login-inputs">

          <h5 id="error-message-register" class="mt-3 error-color hidden"></h5>

          <button type="submit" class="mt-3">Register</button>
          
          <h4 class="mt-3 mb-5">
            Have an account? <button type="button" class="link" id="login-btn">Login Here!</button>
          </h4>
        </ul>
      </form>
    </div>
  </container>
</main>

