<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

  {{#if items.length}}
  <div class="col-md-6 project-list">
    <h3>Current Posts:</h3>

    {{#each items as |item|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/api/item/{{item.id}}">{{item.name}}</a></h4>
        <h4><a href="/api/item/{{item.id}}">{{item.price}}</a></h4>
        <h4><a href="/api/item/{{item.id}}">{{item.originalPrice}}</a></h4>
        <h4><a href="/api/item/{{item.id}}">{{item.dealDay}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{item.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>